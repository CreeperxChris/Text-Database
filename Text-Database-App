import { useState } from 'react'; import { Card, CardContent } from '@/components/ui/card'; import { Button } from '@/components/ui/button'; import { Input } from '@/components/ui/input';

export default function Home() { const [entries, setEntries] = useState([]); const [newEntry, setNewEntry] = useState('');

const addEntry = () => { if (newEntry.trim() === '') return; setEntries([...entries, { title: newEntry, content: '', media: [] }]); setNewEntry(''); };

return ( <div className="p-4"> <h1 className="text-2xl font-bold mb-4">My Worldbuilding Database</h1> <div className="flex gap-2 mb-4"> <Input placeholder="New Entry Title" value={newEntry} onChange={(e) => setNewEntry(e.target.value)} /> <Button onClick={addEntry}>Add Entry</Button> </div> <div className="grid gap-4"> {entries.map((entry, index) => ( <Card key={index}> <CardContent> <h2 className="text-xl font-semibold">{entry.title}</h2> <p className="text-sm text-gray-500">(Click to edit content)</p> </CardContent> </Card> ))} </div> </div> ); }

